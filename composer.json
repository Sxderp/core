	"homepage": "http://fluxbb.org",
	"license": "MIT",
	"authors": [
		{
			"name": "Franz Liedke",
			"email": "franz@fluxbb.org",
			"homepage": "http://www.develophp.org",
			"role": "Lead Developer"
